<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.ModestieTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.ModestieTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.ModestieTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="Widget.ModestieTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <style name="ThemeOverlay.ModestieTheme.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@color/color_background</item>
        <!--<item name="android:backgroundTint">@color/color_background</item>-->
        <item name="android:textColorPrimary">@color/color_on_background</item>
        <item name="android:textColorSecondaryInverse">@color/color_background</item>
        <item name="android:textColorSecondary">@color/color_on_background</item>
        <item name="android:timePickerStyle">@style/ThemeOverlay.ModestieTheme.TimePicker</item>
        <item name="android:datePickerStyle">@style/ThemeOverlay.ModestieTheme.DatePicker</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_variant</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorAccent">@color/color_secondary</item>
        <item name="android:fontFamily">@font/davissans_regular</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
    </style>

    <style name="ThemeOverlay.ModestieTheme.ErrorButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_error</item>
        <item name="android:textColor">@color/color_on_error</item>
    </style>

    <style name="ThemeOverlay.ModestieTheme.ErrorButton.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/color_error</item>
    </style>

    <style name="ThemeOverlay.ModestieTheme.FullScreenDialog" parent="ThemeOverlay.ModestieTheme.Dialog">
        <item name="android:toolbarStyle">@style/Widget.ModestieTheme.Toolbar</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/color_primary</item>
    </style>

    <style name="ThemeOverlay.ModestieTheme.TimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:numbersBackgroundColor">@color/color_surface</item>
        <item name="android:headerBackground">@color/color_surface</item>
    </style>

    <style name="ThemeOverlay.ModestieTheme.DatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/color_surface</item>
        <item name="android:dayOfWeekBackground">@color/color_surface</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.ModestieTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>
    
    <!--Toolbar-->
    <style name="Widget.ModestieTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="colorControlNormal">@color/color_on_primary</item>
    </style>

    <style name="Widget.ModestieTheme.CharacterToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>
</resources>
