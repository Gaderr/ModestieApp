<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/librebaskerville_regular</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->

        <item name="buttonStyle">@style/ButtonNeutral</item>
        <item name="editTextStyle">@style/EditTextModestie</item>
    </style>

    <style name="ButtonNeutral" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/davissans_medium</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <style name="ButtonValidate" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorValidate</item>
        <item name="android:fontFamily">@font/davissans_medium</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <style name="ButtonCancel" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorCancel</item>
        <item name="android:fontFamily">@font/davissans_medium</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>
    
    <style name="TextButtonModestie" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/miedinger_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="EditTextModestie" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textColorHint">@color/colorOnPrimary</item>
        <item name="android:textColorHighlight">@color/colorSecondary</item>
        <item name="android:textColorLink">@color/colorSecondary</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <!--<item name="android:background">@drawable/edit_text_bg_shape</item>-->
    </style>

</resources>
